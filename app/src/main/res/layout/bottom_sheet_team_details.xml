<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Team owener"
     
        android:textAppearance="?android:textAppearanceMedium"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTeamOwenerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:text="My eleven"
                android:layout_toRightOf="@+id/ivTeamOwener"
                android:textAppearance="?android:textAppearanceMedium"/>

            <ImageView
                android:id="@+id/ivTeamOwener"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_person_outline_black_24dp"
                android:tooltipText="Player pic"
                />
            <TextView
                android:id="@+id/tvOwenerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:text="Noida sec 62"
                android:layout_toRightOf="@+id/ivTeamOwener"
                android:layout_below="@+id/tvTeamOwenerName"
                android:textAppearance="?android:textAppearanceMedium"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>